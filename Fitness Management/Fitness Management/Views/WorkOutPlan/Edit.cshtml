@model Fitness_Management.Models.WorkOutPlanDto

<!DOCTYPE html>
<html>
<head>
    <title>Edit WorkOut Plan</title>
</head>
<body>
    <h2>Edit WorkOut Plan</h2>
    <form action="/WorkOutPlan/Edit" method="post">
        <input type="hidden" name="WorkOutPlanID" value="@Model.WorkOutPlanID" />

        <div>
            <label for="ExerciseName">Exercise Name</label>
            <input type="text" id="ExerciseName" name="ExerciseName" value="@Model.ExerciseName" />
        </div>
        <div>
            <label for="Reps">Reps</label>
            <input type="number" id="Reps" name="Reps" value="@Model.Reps" />
        </div>
        <div>
            <label for="Sets">Sets</label>
            <input type="number" id="Sets" name="Sets" value="@Model.sets" />
        </div>
        <div>
            <label for="BodyPart">Body Part</label>
            <input type="text" id="BodyPart" name="BodyPart" value="@Model.BodyPart" />
        </div>
        <div>
            <label for="Notes">Notes</label>
            <input type="text" id="Notes" name="Notes" value="@Model.Notes" />
        </div>

        <div>
            <button class="btn" type="submit" value="Save" />
        </div>
    </form>

    <div>
        <a href="/WorkOut/Details/@Model.WorkOutPlanID">Back to Details</a>
    </div>
</body>
</html>

<style>
    .btn {
        margin-top: 10px;
        padding-left: 30px;
        padding-right: 30px;
        font-size: 18px;
        text-align: center;
        text-decoration: none;
        color: black;
        border: 1px solid black;
        border-radius: 5px;
        cursor: pointer;
        background-color: #FFE433;
    }

        .btn:hover {
            background-color: #ffef83;
            border: 1px solid black;
            border-radius: 5px;
            color: black;
        }
</style>