@model Fitness_Management.Models.WorkOutPlanDto

<!DOCTYPE html>
<html>
<head>
    <title>Delete WorkOut Plan</title>
</head>
<body>
    <h2>Delete WorkOut Plan</h2>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>WorkOut Plan</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>Exercise Name</dt>
            <dd>@Model.ExerciseName</dd>
            <dt>Reps</dt>
            <dd>@Model.Reps</dd>
            <dt>Sets</dt>
            <dd>@Model.sets</dd>
            <dt>Body Part</dt>
            <dd>@Model.BodyPart</dd>
            <dt>Notes</dt>
            <dd>@Model.Notes</dd>
        </dl>

        <form action="/WorkOutPlan/Delete" method="post">
            <input type="hidden" name="WorkOutPlanID" value="@Model.WorkOutPlanID" />
            <button class="btn" type="submit" value="Delete" />
        </form>

        <div>
            <a href="/WorkOut/Details/@Model.WorkOutPlanID">Back to Details</a>
        </div>
    </div>
</body>
</html>

<style>
    .btn {
        margin-top: 10px;
        padding-left: 30px;
        padding-right: 30px;
        font-size: 18px;
        text-align: center;
        text-decoration: none;
        color: black;
        border: 1px solid black;
        border-radius: 5px;
        cursor: pointer;
        background-color: #FFE433;
    }

        .btn:hover {
            background-color: #ffef83;
            border: 1px solid black;
            border-radius: 5px;
            color: black;
        }
</style>