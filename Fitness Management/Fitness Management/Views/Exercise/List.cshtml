@model IEnumerable<Fitness_Management.Models.ExerciseDto>
@{
    ViewBag.Title = "List";
}

<h2>List of Exercises</h2>

<form method="get" action="/Exercise/List">
    <input type="text" name="searchString" value="@ViewBag.search" placeholder="Search by exercise name..." />
    <button class="btn" type="submit">Search</button>
</form>

@foreach (var Item in Model)
{
    <div><a href="Show/@Item.ExerciseId">@Item.ExerciseName</a></div>
}

<style>
    h2 {
        text-align: center;
    }

    form {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    input {
        font-size: 18px;
        color: black;
        border: 1px solid black;
        border-radius: 5px;
    }

    .btn {
        margin-top: 10px;
        padding-left: 50px;
        padding-right: 50px;
        font-size: 18px;
        text-align: center;
        text-decoration: none;
        color: black;
        border: 1px solid black;
        border-radius: 5px;
        background-color: #FFE433;
    }

        .btn:hover {
            background-color: #ffef83;
            border: 1px solid black;
            border-radius: 5px;
            color: black;
        }
</style>