@model Fitness_Management.Models.WorkOutDto

<!DOCTYPE html>
<html>
<head>
    <title>Delete WorkOut</title>
</head>
<body>
    <h2>Delete WorkOut</h2>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>WorkOut</h4>
        <div>
            <p>Name: @Model.Name</p>
        </div>

        <form action="/WorkOut/Delete/@Model.WorkOutId" method="post">
            <input type="hidden" name="id" value="@Model.WorkOutId" />
            <input class="btn" type="submit" value="Delete" />
            <a href="/WorkOut/List">Back to List</a>
        </form>
    </div>
</body>
</html>

<style>
    .btn {
        margin-top: 10px;
        padding-left: 30px;
        padding-right: 30px;
        font-size: 18px;
        text-align: center;
        text-decoration: none;
        color: black;
        border: 1px solid black;
        border-radius: 5px;
        cursor: pointer;
        background-color: #FFE433;
    }

        .btn:hover {
            background-color: #ffef83;
            border: 1px solid black;
            border-radius: 5px;
            color: black;
        }
</style>